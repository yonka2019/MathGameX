<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_xxlarge">

    <!--Main Title-->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global Statistics"
        android:layout_gravity="center"
        android:padding="@dimen/dp_large"
        android:textSize="@dimen/sp_xxlarge"/>

    <!--0dp to make the listview maximized and enable the scroll when he will be fully filled-->
    <ListView
        android:id="@+id/statistics_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/dp_xlarge"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/stats_backButton"
        android:textSize="@dimen/sp_medium"
        android:layout_margin="@dimen/dp_medium"/>
</LinearLayout>
