<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_xxlarge">

    <!--Main Title-->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:layout_gravity="center"
        android:padding="@dimen/dp_large"
        android:textSize="@dimen/sp_xxlarge"/>

    <TableLayout
        android:layout_marginTop="@dimen/dp_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <!--Titles-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Player Name"
                android:gravity="center"
                android:layout_column="1"
                android:padding="@dimen/dp_small"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:textStyle="bold"
                android:id="@+id/stats_playerName"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+"
                android:layout_column="2"
                android:padding="@dimen/dp_small"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:textStyle="bold"
                android:id="@+id/stats_plus"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:gravity="center"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:layout_column="3"
                android:textStyle="bold"
                android:padding="@dimen/dp_small"
                android:id="@+id/stats_minus"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="✕"
                android:layout_column="4"
                android:gravity="center"
                android:textSize="@dimen/sp_large"
                android:textStyle="bold"
                android:padding="@dimen/dp_small"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:id="@+id/stats_multiply"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="÷"
                android:gravity="center"
                android:padding="@dimen/dp_small"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:layout_column="5"
                android:textStyle="bold"
                android:id="@+id/stats_divide"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="***"
                android:layout_column="1"
                android:padding="@dimen/dp_small"
                android:gravity="center"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_column="2"
                android:padding="@dimen/dp_small"
                android:gravity="center"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_column="3"
                android:padding="@dimen/dp_small"
                android:gravity="center"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_column="4"
                android:padding="@dimen/dp_small"
                android:gravity="center"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_column="5"
                android:padding="@dimen/dp_small"
                android:gravity="center"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"/>
        </TableRow>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/stats_backButton"
            android:textSize="@dimen/sp_medium"
            android:layout_marginTop="@dimen/dp_medium"/>
    </TableLayout>
</LinearLayout>
