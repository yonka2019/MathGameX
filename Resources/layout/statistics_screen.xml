<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_xxlarge">

    <!--Main Title-->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:layout_gravity="center"
        android:padding="@dimen/dp_large"
        android:textSize="@dimen/sp_xxlarge"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <!--Titles-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Name"
                android:layout_column="1"
                android:padding="@dimen/dp_small"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:id="@+id/stat_playerName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_column="2"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:id="@+id/stat_plus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:layout_column="3"
                android:id="@+id/stat_minus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✕"
                android:layout_column="4"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:id="@+id/stat_multiply"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="÷"
                android:textSize="@dimen/sp_large"
                android:layout_marginRight="@dimen/dp_3xlarge"
                android:layout_column="5"
                android:id="@+id/stat_divide"/>
        </TableRow>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/stat_BackButton"
            android:textSize="@dimen/sp_medium"
            android:layout_marginTop="@dimen/dp_medium"/>
    </TableLayout>
</LinearLayout>
