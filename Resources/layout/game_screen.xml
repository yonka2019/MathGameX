<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_xlarge"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_ularge"
            android:textStyle="bold"
            android:text="Timer"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_mlarge"
        android:layout_marginBottom="@dimen/dp_large"
        android:textSize="@dimen/sp_ularge"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="0 + 2 ="/>

    <EditText
        android:layout_width="@dimen/dp_ularge"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_xlarge"
        android:inputType="number"/>

    <Button
        android:layout_width="@dimen/dp_uxlarge"
        android:layout_height="wrap_content"
        android:text="Input"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_large"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_xxlarge"
        android:padding="@dimen/dp_large"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="correct 0"
                android:textSize="@dimen/sp_xlarge"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wrong 0"
                android:textSize="@dimen/sp_xlarge"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
