<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_large">

    <!--Main Title-->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_main_title"
        android:layout_gravity="center"
        android:padding="@dimen/dp_medium"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/sp_xxlarge"/>

    <!--Profile, login, register-->
    <LinearLayout
        android:layout_marginTop="@dimen/dp_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_large">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/male_user_32px"
            android:contentDescription="profile image (non-clickable)"
            android:paddingRight="@dimen/dp_medium"/>

        <!--If logged, here will showed username-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="username"
            android:id="@+id/main_username"/>

        <!--If logged, login/register buttons will be hiden-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="Login"
            android:textSize="@dimen/sp_large"
            android:id="@+id/main_loginButton"
            android:textStyle="bold"
            android:paddingRight="@dimen/dp_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="Register"
            android:textSize="@dimen/sp_large"
            android:textStyle="bold"
            android:id="@+id/main_registerButton"/>

     </LinearLayout>

    <!--Menu Buttons--> <!--If user not logged in, he cant play-->
    <LinearLayout
        android:layout_marginTop="@dimen/dp_xlarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_statsButton"
            android:text="@string/main_stats"
            android:textSize="@dimen/sp_medium"
            android:layout_gravity="center"
            android:enabled="true"/>

         <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_startGameButton"
            android:text="@string/main_start_game"
            android:textSize="@dimen/sp_medium"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_medium"
            android:enabled="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_settings"
            android:textSize="@dimen/sp_medium"
            android:id="@+id/main_settingsButton"
            android:layout_gravity="center"
            android:enabled="true"/>
    </LinearLayout>

    <!--Additional buttoms (bottom buttons)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/dp_large"
        android:layout_marginLeft="@dimen/dp_small"
        android:layout_marginRight="@dimen/dp_small">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_setSongButton"
            android:src="@drawable/musical_32px"
            android:contentDescription="Set song button" />
    </LinearLayout>
</LinearLayout>