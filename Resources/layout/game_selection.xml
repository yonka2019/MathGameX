<?xml version = "1.0" encoding = "utf-8"?> 
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android" 
    android:orientation = "vertical" 
    android:layout_width = "match_parent" 
    android:layout_height = "match_parent" 
    android:minWidth = "25px" 
    android:minHeight = "25px"
    android:paddingTop="@dimen/dp_4xlarge"> 

    <!--Main Title-->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Select Game •"
        android:layout_gravity="center"
        android:padding="@dimen/dp_small"
        android:textSize="@dimen/sp_xxlarge"
        android:layout_marginBottom="@dimen/dp_3xlarge"/>

    <Button 
        android:id="@+id/gSelection_infinity"
        android:layout_width="match_parent" 
        android:layout_margin="10dp"
        android:layout_height="wrap_content" 
        android:text="Inifnity Game"/> 

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_medium"
        android:layout_marginBottom="@dimen/dp_medium">

        <Button
            android:id="@+id/gSelection_easy"
            android:layout_width="@dimen/dp_mxlarge"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:layout_marginBottom="@dimen/dp_medium"/>

        <Button
            android:id="@+id/gSelection_medium"
            android:layout_width="@dimen/dp_mxlarge"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_medium"
            android:text="Medium"/>

        <Button
            android:id="@+id/gSelection_hard"
            android:layout_width="@dimen/dp_mxlarge"
            android:layout_marginBottom="@dimen/dp_medium"
            android:layout_height="wrap_content"
            android:text="Hard"/>
    </LinearLayout>
</LinearLayout>