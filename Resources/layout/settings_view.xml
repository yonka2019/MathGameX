<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_xxlarge">

    <!--Main Title-->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_main_title"
        android:layout_gravity="center"
        android:padding="@dimen/dp_large"
        android:textSize="@dimen/sp_xxlarge"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        
        <!--[1] [+]-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[1] Single-Digit numbers"
                android:layout_column="1"
                android:padding="@dimen/dp_small"
                android:textSize="@dimen/sp_large"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[+] Plus"
                android:layout_marginRight="@dimen/dp_xxlarge"
                android:textSize="@dimen/sp_large"/>
        </TableRow>

        <!--[2] [-]-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[2] Double-Digit numbers"
                android:layout_column="1"
                android:padding="@dimen/dp_small"
                android:textSize="@dimen/sp_large"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[-] Minus"
                android:layout_marginRight="@dimen/dp_xxlarge"
                android:textSize="@dimen/sp_large"/>
        </TableRow>

        <!--[3] [✕]-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[3] Triple-Digit numbers"
                android:layout_column="1"
                android:padding="@dimen/dp_small"
                android:textSize="@dimen/sp_large"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[✕] Multiply"
                android:layout_marginRight="@dimen/dp_xxlarge"
                android:textSize="@dimen/sp_large"/>
        </TableRow>

        <!--[4] [÷]-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[4] Fourth-Digit numbers"
                android:layout_column="1"
                android:padding="@dimen/dp_small"
                android:textSize="@dimen/sp_large"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[÷] Divide"
                android:layout_marginRight="@dimen/dp_xxlarge"
                android:textSize="@dimen/sp_large"/>
        </TableRow>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save and exit"
            android:textSize="@dimen/sp_medium"
            android:layout_marginTop="@dimen/dp_medium"/>
    </TableLayout>
</LinearLayout>
