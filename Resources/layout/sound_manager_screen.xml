<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/itunes_32px"
            android:contentDescription="register image (non-clickable)"
            android:paddingRight="@dimen/dp_medium"/>

        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Sound Settings"
           android:textSize="@dimen/sp_xlarge"
           android:textStyle="bold"
           android:layout_marginTop="@dimen/dp_xlarge"
           android:layout_marginBottom="@dimen/dp_xlarge"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Select any song below -"
        android:textSize="@dimen/sp_large"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_xlarge"
        android:layout_marginTop="@dimen/dp_medium"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/music_lvMusic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Music Volume •"
        android:textSize="@dimen/sp_large"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_xlarge"
        android:layout_marginTop="@dimen/dp_xlarge"/>

    <SeekBar
        android:id="@+id/music_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:max="100"
        android:progress="40"
        android:layout_marginBottom="@dimen/dp_3xlarge"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Ambient Sounds Volume •"
        android:textSize="@dimen/sp_large"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_xlarge"
        android:layout_marginTop="@dimen/dp_medium"/>

     <SeekBar
        android:id="@+id/ambient_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:max="100"
        android:progress="40"
        android:layout_marginBottom="@dimen/dp_3xlarge"/>

    <Button
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:text="Back to menu"
        android:textSize="@dimen/sp_medium"
        android:id="@+id/music_backButton"/>
</LinearLayout>
